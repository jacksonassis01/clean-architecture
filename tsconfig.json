{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS", // Pode ser "ESNext" se estiver usando m√≥dulos ECMAScript
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  